@model IEnumerable<UcmStore.Models.ClothingItem>
  

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


    <div class="container">

        <div class="row" style="margin-top:10vh;">

            <div class="col-lg-3">

                <h1 class="my-4" style="color:##423c3c" ;>Mule Gear</h1>
                <div class="list-group">
                    <a href="@Url.Action("Shirts", "Shopping")" class="list-group-item">Shirts</a>
                    <a href="@Url.Action("Sweatshirts", "Shopping")" class="list-group-item">Sweatshirts</a>
                    <a href="@Url.Action("Pants", "Shopping")" class="list-group-item">Pants</a>
                </div>

            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" style="width:95%;" src="~/Content/Images/Homepage/Carousel/mascotMadness.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" style="width:95%;" src="~/Content/Images/Homepage/Carousel/crewsale.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" style="width:95%;" src="~/Content/Images/Homepage/Carousel/bogo.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row">
                    @foreach (var item in Model) {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            @if (item.category == 1)
                            {
                                <a href="@Url.Action("ProductDetails", "Shopping", new { Id = item.id, Name = item.name, Price = item.price, Desc = item.description, picLocation = "/Content/Images/Shirts/" + item.id + ".jpg" })"><img class="card-img-top" src="~/Content/Images/Shirts/@(item.id).jpg" alt=""></a>
                            }
                            else if (item.category == 2)
                            {
                                <a href="@Url.Action("ProductDetails", "Shopping", new { Id = item.id, Name = item.name, Price = item.price, Desc = item.description, picLocation = "/Content/Images/Sweatshirts/" + item.id + ".jpg" })"><img class="card-img-top" src="~/Content/Images/Sweatshirts/@(item.id).jpg" alt=""></a>
                            }
                            else if (item.category == 3)
                            {
                                <a href="@Url.Action("ProductDetails", "Shopping", new { Id = item.id, Name = item.name, Price = item.price, Desc = item.description, picLocation = "/Content/Images/Pants/" + item.id + ".jpg" })"><img class="card-img-top" src="~/Content/Images/Pants/@(item.id).jpg" alt=""></a>
                            }
                            else
                            {
                                <strong>Not Available</strong>
                            }
                            <div class="card-body">
                                <h4 class="card-title">
                                    @if (item.category == 1)
                                    {
                                        <a href="@Url.Action("ProductDetails", "Shopping", new { Id = item.id, Name = item.name, Price = item.price, Desc = item.description, picLocation = "/Content/Images/Shirts/" + item.id + ".jpg" })">@item.name</a>
                                    }
                                    else if (item.category == 2)
                                    {
                                        <a href="@Url.Action("ProductDetails", "Shopping", new { Id = item.id, Name = item.name, Price = item.price, Desc = item.description, picLocation = "/Content/Images/Sweatshirts/" + item.id + ".jpg" })">@item.name</a>
                                    }
                                    else if (item.category == 3)
                                    {
                                        <a href="@Url.Action("ProductDetails", "Shopping", new { Id = item.id, Name = item.name, Price = item.price, Desc = item.description, picLocation = "/Content/Images/Pants/" + item.id + ".jpg" })">@item.name</a>
                                    }
                                    else
                                    {
                                        <b>Not Available</b>
                                    }
                                </h4>
                                <h5>$@item.price.00 </h5>
                                <p class="card-text">@item.description</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>
                    }


                </div>
                <!-- /.row -->

            </div>
            <!-- /.col-lg-9 -->

        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
        </div>
        <!-- /.container -->
    </footer>

